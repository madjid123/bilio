  <% include partials/alerts %>

    <!--BOOKS-->
    <section id="browse_documents" class="mt-5">
      <div class="container">

        <div class="row justify-content-center">
          <% for(var i=0; i < documents.length; i++) { %>
            <div class="card rounded-card col-md-3 m-3 text-center">
              <div class="card-body">
                <h5 class="card-titre">
                  <%=documents[i].titre%>
                </h5>
                <p class="text-muted">
                  <small class="text-muted">Auteur : <%=documents[i].auteur%></small>
                </p>
                <p class="text-muted">
                  <small class="text-muted">Categorie : <%=documents[i].categorie%></small>
                </p>
                <p class="text-muted">
                  <small class="text-muted">Nombre d'exemplaire : <%=documents[i].stock%></small>
                </p>


                <% if(currentUser && documents[i].stock> 0 ) { var match = false%>
                  <% user.exemplairepretInfo.forEach(document_info=> { %>
                    <% if(document_info._id.equals(documents[i]._id)) { %>
                      <a href="#" class=" btn rounded-pill  btn-xs btn-warning disabled" role="button"
                        aria-disabled="true">pretd!</a>
                      <a href="/documents/return-renew" class=" btn rounded-pill  btn-xs btn-success"
                        role="button">Return/Renew</a>
                      <% match=true; } %>
                        <% }) %>

                          <% if(!match && documents[i].ExemplairesDisponible> 0 && currentUser.type ==='lecteur') {%>
                            <form action="/documents/<%=documents[i]._id%>/pret/<%=currentUser._id%>" method="POST"
                              class="d-inline">
                              <input class=" btn rounded-pill  btn-xs btn-success" type="submit" value="Reserve">
                            </form>
                            <% } %>
                              <% } %>
                                <a href="/documents/details/<%=documents[i]._id%>"
                                  class=" btn rounded-pill  btn-xs btn-primary">Details</a>
              </div>
            </div>
            <% } %>
        </div>
        <% if (pages> 0) { %>
          <nav class="m-auto  ">
            <ul class="pagination  mb-2 justify-content-center">

              <% if (current==1) { %>
                <li class="page-item disabled"><a class="page-link">First</a></li>
                <% } else { %>
                  <li class="page-item"><a href="/documents/<%=filter%>/<%=value%>/1" class="page-link">First</a></li>
                  <% } %>

                    <% var i=(Number(current)> 5 ? Number(current) - 4 : 1) %>
                      <% if (i !==1) { %>
                        <li class="page-item disabled"><a class="page-link">...</a></li>
                        <% } %>
                          <% for (; i <=(Number(current) + 4) && i <=pages; i++) { %>
                            <% if (i==current) { %>
                              <li class="page-item active"><a class="page-link">
                                  <%= i %>
                                </a></li>
                              <% } else { %>
                                <li class="page-item"><a class="page-link"
                                    href="/documents/<%=filter%>/<%=value%>/<%= i %>">
                                    <%= i %>
                                  </a></li>
                                <% } %>
                                  <% if (i==Number(current) + 4 && i < pages) { %>
                                    <li class="page-item disabled"><a class="page-link">...</a></li>
                                    <% } %>
                                      <% } %>
                                        <% if (current==pages) { %>
                                          <li class="page-item disabled"><a class="page-link">Last</a></li>
                                          <% } else { %>
                                            <li class="page-item"><a
                                                href="/documents/<%=filter%>/<%=value%>/<%= pages %>"
                                                class="page-link">Last</a></li>
                                            <% } %>
            </ul>
          </nav>
          <% } %>
      </div>
    </section>


    <% include partials/footer %>