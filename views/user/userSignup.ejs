<% include ../partials/header %> <% if(currentUser && currentUser.type !==
'lecteur') {%> <% include ../partials/adminNav%> <%} else {%> <% include
../partials/userNav %> <%}%> <% include ../partials/alerts%>
<section id="usersignUpForm">
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-12">
        <div class="rounded-card">
          <div class="rounded-card-header text-center">
            <h4>Inscription d'un lecteur</h4>
          </div>
          <div class="card-body">
            <form class="p-3" action="/auth/user-signUp" method="POST">
              <div class="row">
                <div class="col form-group">
                  <label class="form-label">Prenom</label>
                  <input
                    type="text"
                    name="prenom"
                    placeholder="Prenom de lecteur"
                    class="form-control rounded-pill"
                    required
                  />
                </div>

                <div class="col form-group">
                  <label class="form-label">Nom</label>
                  <input
                    type="text"
                    name="nom"
                    placeholder="Nom de lecteur"
                    class="form-control rounded-pill"
                    required
                  />
                </div>
              </div>
              <div class="row">
                <div class="col form-group">
                  <label class="form-label">Pseudo</label>
                  <input
                    type="text"
                    name="username"
                    placeholder="pseudo"
                    class="form-control rounded-pill"
                    required
                  />
                </div>
                <div class="col form-group">
                  <label class="form-label">Numéro/Matricule de lecteur</label>
                  <input
                    type="text"
                    name="numero"
                    placeholder="numero"
                    class="form-control rounded-pill"
                    required
                  />
                </div>
              </div>
              <div class="row">
                <div class="col form-group">
                  <label class="form-label">Email</label>
                  <input
                    type="email"
                    name="email"
                    placeholder="Email"
                    class="form-control rounded-pill"
                    required
                  />
                </div>
                <div class="col form-group">
                  <label class="form-label">Structure</label>
                  <input
                    type="text"
                    name="structure"
                    placeholder="Structure"
                    class="form-control rounded-pill"
                  />
                </div>
              </div>

              <div class="row">
                <div class="col form-group">
                  <label class="form-label">Catégorie</label>
                  <select
                    type="text"
                    name="categorie"
                    default=""
                    value=""
                    class="form-control rounded-pill"
                    required
                  >
                    <option value="" selected>--</option>
                    <option value="Etudiant">Etudiant</option>
                    <option value="Chercheur">Chercheur</option>
                    <option value="Enseignant">Enseignant</option>
                  </select>
                </div>
                <div class="col form-group">
                  <label class="form-label">Date de naissance</label>
                  <input
                    type="date"
                    name="dateDeNaissance"
                    placeholder="Date de naissance"
                    class="form-control rounded-pill"
                    required
                  />
                </div>
              </div>
              <div class="form-group">
                <label class="form-label">Mot de passe</label>
                <input
                  type="password"
                  name="password"
                  placeholder="Password"
                  class="form-control rounded-pill"
                  required
                />
              </div>

              <div class="form-group">
                <label class="form-label">Addresse</label>
                <input
                  type="text"
                  name="addresse"
                  placeholder="Address"
                  class="form-control rounded-pill"
                />
              </div>
              <div class="justify-content-center text-center">
                <button
                  type="submit"
                  class="btn rounded-pill btn-primary text-center px-10"
                >
                  Submit
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<% include ../partials/footer %>
