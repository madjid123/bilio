<% include ../partials/header %>


  <!--NAVIGATION BAR FOR ADMIN-->
  <% include ../partials/adminNav %>
    <header id="main-header" class="py-2 bg-primary text-white">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <h1><i class="fa fa-pencil"></i> User Activities</h1>
          </div>
        </div>
      </div>
    </header>
    <!-- ACTIONS -->
    <section id="actions" class="py-4 mb-4" , style='display:right'>
      <div class="container">
        <div class="row">
          <div class="col-md-3 mr-auto">
            <a href="/admin" class=" btn rounded-pill  btn-light btn-block">
              <i class="fa fa-arrow-left"></i> Back To Dashboard
            </a>
          </div>
          <div class="col-md-6">
            <form action="/admin/users/activities/<%=activities[0].user_id.id%>" method="POST">
              <div class="input-group">
                <input name="categorie" type="text" class="form-control rounded-pill  "
                  placeholder="Search activities by categorie...">
                <span class="input-group-btn">
                  <button class=" btn rounded-pill  btn-primary">Search</button>
                </span>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>


    <!-- Activities -->
    <section id="posts">
      <div class="container">
        <div class="row">
          <div class="col">
            <div class="card">
              <div class="card-header text-center">
                <h4>Recent Activities</h4>
              </div>
              <table class="table table-light">
                <thead class="thead-light">
                  <tr>
                    <th>Info</th>
                    <th>Categorie</th>
                    <th>Date Posted</th>
                  </tr>
                </thead>
                <tbody>
                  <%for(let i=0; i < activities.length; i++) { %>

                    <tr>
                      <% if(activities[i].categorie=="pret" ) { %>
                        <td>
                          <%=activities[i].user_id.username || 'This user' %> pretd <%=activities[i].info.titre%>
                        </td>
                        <td>pret</td>
                        <td>
                          <%=activities[i].entryTime.toDateString()%>
                        </td>
                        <% } else if(activities[i].categorie=="Return" ) { %>
                          <td>
                            <%=activities[i].user_id.username || 'This user' %> returned <%=activities[i].info.titre%>
                          </td>
                          <td>Return</td>
                          <td>
                            <%=activities[i].entryTime.toDateString()%>
                          </td>
                          <% } else if(activities[i].categorie=="Renew" ) { %>
                            <td>
                              <%=activities[i].user_id.username || 'This user' %> renewed
                                <%=activities[i].info.titre%>
                            </td>
                            <td>Renew</td>
                            <td>
                              <%=activities[i].entryTime.toDateString()%>
                            </td>

                            <% } else if(activities[i].categorie=="Update Profile" ) { %>
                              <td>
                                <%=activities[i].user_id.username || 'This user' %> updated profile
                              </td>
                              <td>Update Profile</td>
                              <td>
                                <%=activities[i].entryTime.toDateString()%>
                              </td>

                              <% } else if(activities[i].categorie=="Modifier le mot de passe" ) { %>
                                <td>
                                  <%=activities[i].user_id.username || 'This user' %> updated password
                                </td>
                                <td>Modifier le mot de passe</td>
                                <td>
                                  <%=activities[i].entryTime.toDateString()%>
                                </td>

                                <% } else if(activities[i].categorie=="Upload Photo" ) { %>
                                  <td>
                                    <%=activities[i].user_id.username || 'This user' %> update/upload profile
                                  </td>
                                  <td>Update/Upload Profile</td>
                                  <td>
                                    <%=activities[i].entryTime.toDateString()%>
                                  </td>

                                  <% } else if(activities[i].categorie=="Comment" ) { %>
                                    <td>
                                      <%=activities[i].user_id.username || 'This user' %> commented on
                                        <%=activities[i].info.titre%>
                                    </td>
                                    <td>Comment</td>
                                    <td>
                                      <%=activities[i].entryTime.toDateString()%>
                                    </td>
                                    <% } else if(activities[i].categorie=="Update Comment" ) { %>
                                      <td>
                                        <%=activities[i].user_id.username || 'This user' %> updated comment on
                                          <%=activities[i].info.titre%>
                                      </td>
                                      <td>Update Comment</td>
                                      <td>
                                        <%=activities[i].entryTime.toDateString()%>
                                      </td>
                                      <% } else if(activities[i].categorie=="Delete Comment" ) { %>
                                        <td>
                                          <%=activities[i].user_id.username || 'This user' %> deleted comment on
                                            <%=activities[i].info.titre%>
                                        </td>
                                        <td>Delete Comment</td>
                                        <td>
                                          <%=activities[i].entryTime.toDateString()%>
                                        </td>
                                        <% } %>
                    </tr>

                    <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </section>


    </div>
    </div>
    <% include ../partials/footer %>