<% include ../../partials/header %>
    <!-- this is supposed to be more i don't know-->
    <!--NAVIGATION BAR FOR ADMIN-->
    <% include ../../partials/adminNav %>
        <% include ../../partials/alerts%>
            <div class="container my-4">
                <div class="row justify-content-center">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col">
                                <div class="card text-dar">
                                    <div class="card-header text-center">
                                        <h5>Exemplaires : </h5>
                                    </div>
                                    <br>

                                    <div class="col justify-content-center text-center"><a
                                            class="btn display-1 btn-primary text-bold"
                                            href='/admin/document/<%=doc_id%>/copies/add'><i
                                                class=" bi bi-plus-circle pr-2 " width='30'></i>Exemplaire</a>
                                    </div>
                                    <table class="table table-striped">
                                        <% if(copies.length !==0 ) {%>
                                            <br>
                                            <thead class="thead-inverse">
                                                <tr>
                                                    <th>cote</th>
                                                    <th>localisation</th>
                                                    <th>support</th>
                                                    <th>type de pret</th>
                                                    <th>statut</th>
                                                    <th>edit</th>
                                                </tr>
                                            </thead>
                                            <tbody>



                                                <% copies.forEach(copy=> { %>

                                                    <tr>
                                                        <td>
                                                            <%= copy.cote%>
                                                        </td>
                                                        <td>
                                                            <%= copy.localization%>
                                                        </td>
                                                        <td>
                                                            <%= copy.material%>
                                                        </td>
                                                        <td>
                                                            <%= copy.landtype%>
                                                        </td>
                                                        <td>
                                                            <%= copy.status%>
                                                        </td>
                                                        <td>
                                                            <a href="/admin/document/<%=copy.doc_id%>/copies/update/<%=copy._id%>"
                                                                class="btn btn-outline-primary btn-sm">Update</a>
                                                            <a href="/admin/document/<%=copy.doc_id%>/copies/delete/<%=copy._id%>"
                                                                class="btn btn-sm btn-danger">Delete</a>

                                                        </td>
                                                    </tr>
                                                    <% }); %>
                                                        <% }else {%>
                                                            <hr>
                                                            <tr class="text-center"> <span
                                                                    class="text-center text-danger">Pas
                                                                    d'exemplaires</span></tr>
                                                            <% }%>

                                            </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>