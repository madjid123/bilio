<% include ../../partials/header %>

<!--NAVIGATION BAR FOR ADMIN-->
<% include ../../partials/adminNav %>

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form action="/admin/document/<%= doc_id%>/exemplaire/update/<%=exemplaire._id%>" method="POST">
                <div class="form-group">
                    <label for="titre" class="form-label">Cote</label>
                    <input name="document[cote]" type="text" class="form-control rounded-pill  "
                        value="<%-exemplaire.cote%>" required>
                </div>

                <div class="form-group">
                    <label for="auteur" class="form-label">localisation</label>
                    <input name="document[localisation]" type="text" class="form-control rounded-pill  "
                        value="<%-exemplaire.localisation%>" required>
                </div>

                <div class="form-group">
                    <label for="categorie" class="form-label">Statut</label>
                    <input name="document[statut]" type="text" class="form-control rounded-pill  "
                        value="<%-exemplaire.statut%>" required>
                </div>

                <div class="form-group">
                    <label for="auteur" class="form-label">Type de pret</label>
                    <select name="document[typePret]" class="form-control rounded-pill  -select"
                        value="<%-exemplaire.typePret%>" default='' required>
                        <option value="--">--</option>
                        <option value="prêt externe">prêt externe</option>
                        <option value="consulation sur place">consulation sur place</option>

                    </select>

                </div>

                <button class=" btn rounded-pill  btn-block btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>

<% include ../../partials/footer %>