<% include ../../partials/header %>



  <!--NAVIGATION BAR FOR ADMIN-->
  <% include ../../partials/adminNav %>

    <header id="main-header" class="py-2 bg-light text-secondary shadow text-center">
      <h1><i class="fa fa-users"></i>Gestion des Bibliothécaire</h1>
    </header>

    

    <% include ../../partials/alerts %>
      <div class="container justify-content-around text-center text-white">
        <div class="row p-2 justify-content-around">
<div class="col-md-4">
            <a href="/admin/add" class=" btn rounded-pill shadow  btn-success btn-block">
              <i class="fa fa-plus"></i> Ajouter un admin
            </a>
        </div>
        </div>
      </div>

      <!-- USERS -->
      <section id="users">
        <div class="container justify-content-center text-center">
          <div class="row">
            <div class="col">
              <div class="rounded-card">
                <div class="rounded-card-header ">
                  <h4>Users</h4>
                </div>
                <div class="card-body " style="overflow-x: auto;">
                <table mb-5 text-center  class="table mb-5 text-center  table-light" style="overflow: auto">
                  <thead class="thead-light text-center justify-content-center">
                    <tr class="justify-content-center">
                      <th class='py-3'>Username</th>
                      <th class='py-3'>Email</th>
                      <th class='py-3'>Date d'adhéstion</th>
                      <th class='py-3'>Modifier</th>
                      
                    </tr>
                  </thead>
                  <tbody>

                    <% users.forEach(user=> { %>
                      <% if (user.estAdmin) return; %>
                          <td>
                            <a  Titre="Visit this user">
                              <%=user.username%>
                            </a>
                          </td>
                          <td>
                            <%=user.email%>
                          </td>
                          <td>
                            <%=user.dateDadhesion.toDateString()%>
                          </td>
                          <td>
                            <div style='display:flex; justify-content: center; ' class=''>
                                  

            <a href="" class="mx-1 btn rounded-pill  btn-primary btn-sm" data-toggle="modal"
              data-target="#userNameModal">
              Modifier
            </a>
            <a href="/admin/user/priv/<%=user._id%>/delete" titre="Delete User"
                                    class=" btn rounded-pill  btn-sm btn-danger">
                                    <i class="fa fa-trash"></i>
                                  </a>
                            </div>
           
<!--USER MODAL-->
    <div class="modal fade" id="userNameModal">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header bg-primary text-white">
            <h5 class="modal-titre" id="passwordModalLabel">
              Modifier le profile
            </h5>
            <button class="close" data-dismiss="modal"><span>&times;</span></button>
          </div>
          <div class="modal-body">
            <form action="/admin/user/priv/<%=user._id%>/update" method="POST">
              <div class="form-group">
                <label for="admin[username]" class="form-label">Modifier Username</label>
                <input name="admin[username]" type="text" class="form-control rounded-pill  "
                  value="<%=user.username%>">
              </div>

              <div class="form-group">
                <label for="admin[email]" class="form-label">Modifier Email</label>
                <input name="admin[email]" type="email" class="form-control rounded-pill  "
                  value="<%=user.email%>">
              </div>
              <button class=" btn rounded-pill  btn-primary btn-block">Modifier!</button>
            </form>
          </div>
        </div>
      </div>
    </div>
                          </td>
                        </tr>
                        <% }); %>
                  </tbody>
                </table></div>
            </div>
              </div> 
          </div>
          </div>
      </section>



      <% include ../../partials/footer %>