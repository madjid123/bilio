<% include ../../partials/header %>


    <!--NAVIGATION BAR FOR ADMIN-->
    <% include ../../partials/adminNav %>

        <header id="main-header" class="py-2 bg-primary text-white">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <h1><i class="fa fa-users"></i> Suspensions</h1>
                    </div>
                </div>
            </div>
        </header>

        <!-- ACTIONS -->
        <section id="actions" class="py-4 mb-4">
            <div class="container">
                <div class="row">
                    <div class="col-md-3 mr-auto">
                        <a href="/admin" class=" btn rounded-pill  btn-light btn-block">
                            <i class="fa fa-arrow-left"></i> Back To Dashboard
                        </a>
                    </div>
                    <div class="col-md-6">
                        <form action="/admin/users/1" method="POST">
                            <div class="input-group">
                                <input name="searchUser" type="text" class="form-control rounded-pill  "
                                    placeholder="Search User by First Name, Last Name, username, E-mail">
                                <span class="input-group-btn">
                                    <button class=" btn rounded-pill  btn-primary">Search</button>
                                </span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>

        <% include ../../partials/alerts %>
            <div class="container justify-content-center text-center text-white">
                <div class="row p-2">
                    <div class="col"></div>
                    >
                </div>
            </div>
            <!-- USERS -->
            <section id="users">
                <div class="container justify-content-center text-center">
                    <div class="row">
                        <div class="col">
                            <div class="card">
                                <div class="rounded-card-header ">
                                    <h4>Users</h4>
                                </div>
                                <table mb-5 text-center  class="table mb-5 text-center  table-light" style="overflow: auto">
                                    <thead class="thead-light text-center justify-content-center">
                                        <tr class="justify-content-center">
                                            <th class='py-3'>Name</th>
                                            <th class='py-3'>User name</th>
                                            <th class='py-3'>Email</th>
                                            <th class='py-3'>Date Regisetered</th>
                                            <th class='py-3'>Violation flag</th>
                                            <th class='py-3'>Fine</th>
                                            <th>

                                                <a href='/auth/user-signup/'
                                                    class=" btn rounded-pill  btn-primary gx-0 text-white"><i
                                                        class='bi bi-plus-circle'></i> Lecteur</a>

                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        <% users.forEach(user=> { %>
                                            <% if (user.estAdmin) return; %>
                                                <tr>
                                                    <td>
                                                        <%=user.prenom + " " + user.nom%>
                                                    </td>
                                                    <td>
                                                        <a href="/admin/users/profile/<%=user._id%>"
                                                            Titre="Visit this user">
                                                            <%=user.username%>
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <%=user.email%>
                                                    </td>
                                                    <td>
                                                        <%=user.dateDadhesion.toDateString()%>
                                                    </td>
                                                    <td>
                                                        <%=user.violationFlag%>
                                                    </td>
                                                    <td>$<%=user.fines%>
                                                    </td>
                                                    <td>
                                                        <div style='display:flex; justify-content: center; ' class=''>
                                                            <%if(user.exemplairepretInfo.length> 0) { %>
                                                                <a href="/admin/users/delete/<%=user._id%>"
                                                                    Titre="This user has documents in possession. Are you sure to delete this user?"
                                                                    class=" btn rounded-pill  btn-sm btn-danger m-1">
                                                                    <i class="fa fa-trash"></i>
                                                                </a>
                                                                <% } else { %>
                                                                    <a href="/admin/users/delete/<%=user._id%>"
                                                                        titre="Delete User"
                                                                        class=" btn rounded-pill  btn-sm btn-danger">
                                                                        <i class="fa fa-trash"></i>
                                                                    </a>
                                                                    <% } %>

                                                                        <% if(user.violationFlag) { %>
                                                                            <form
                                                                                action='/admin/users/suspendre/<%=user._id%>'
                                                                                method='post'>
                                                                                <button type='submit'
                                                                                    titre=" Lift the flag"
                                                                                    class="  btn rounded-pill  btn-sm  mx-1 btn-warning">
                                                                                    <i class="fa fa-flag"></i>
                                                                                </button>
                                                                            </form>

                                                                            <% } else { %>
                                                                                <div class="modal fade"
                                                                                    id="supendlect<%=user._id%>">
                                                                                    <div class="modal-dialog modal-lg">
                                                                                        <div class="modal-content">
                                                                                            <div
                                                                                                class="modal-header bg-danger text-white">
                                                                                                <h5 class="modal-titre"
                                                                                                    id="deleteProfileModalLabel">
                                                                                                    Once you press yes,
                                                                                                    you will lose the
                                                                                                    admin facility
                                                                                                    permanently. Are
                                                                                                    you sure?
                                                                                                </h5>
                                                                                                <button class="close"
                                                                                                    data-dismiss="modal"><span>&times;</span></button>
                                                                                            </div>
                                                                                            <div class="modal-body">
                                                                                                <form
                                                                                                    action="/admin/users/suspendre/<%=user._id%>"
                                                                                                    method="POST">
                                                                                                    <div
                                                                                                        class="form-group">
                                                                                                        <label
                                                                                                            class="form-label">
                                                                                                            Durée</label>
                                                                                                        <input
                                                                                                            type="number"
                                                                                                            class="form-control rounded-pill  "
                                                                                                            placeholder="nombre de jours"
                                                                                                            name="duree">
                                                                                                        <label
                                                                                                            class="form-label">Motif
                                                                                                        </label>
                                                                                                        <input
                                                                                                            type="number"
                                                                                                            class="form-control rounded-pill  "
                                                                                                            name="motif"
                                                                                                            placeholder="nombre de jours">
                                                                                                    </div>
                                                                                                    <div class="row">
                                                                                                        <div
                                                                                                            class="col">
                                                                                                            <input
                                                                                                                type="submit"
                                                                                                                value="supendre"
                                                                                                                class=" btn rounded-pill  btn-danger btn-block m-1">
                                                                                                        </div>
                                                                                                        <div
                                                                                                            class="col">
                                                                                                            <input
                                                                                                                type="button"
                                                                                                                value="annuler"
                                                                                                                data-dismiss="modal"
                                                                                                                class=" btn rounded-pill  btn-outline-primary btn-block m-1">
                                                                                                        </div>
                                                                                                    </div>
                                                                                                </form>

                                                                                            </div>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                                <a href="/admin/users/suspendre/<%=user._id%>"
                                                                                    titre="Warn user"
                                                                                    class=" btn rounded-pill  btn-sm btn-success mx-1"
                                                                                    data-toggle="modal"
                                                                                    data-target="#supendlect<%=user._id%>">

                                                                                    <i class="fa fa-flag"></i>
                                                                                </a>
                                                                                <% } %>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                    </tbody>
                                </table>

                                <% if (pages> 0) { %>
                                    <nav class="mx-auto mb-2">
                                        <ul class="pagination ">

                                            <% if (current==1) { %>
                                                <li class="page-item disabled"><a class="page-link">First</a></li>
                                                <% } else { %>
                                                    <li class="page-item"><a href="/admin/users/1"
                                                            class="page-link">First</a></li>
                                                    <% } %>

                                                        <% var i=(Number(current)> 5 ? Number(current) - 4 : 1) %>
                                                            <% if (i !==1) { %>
                                                                <li class="page-item disabled"><a class="page-link">....
                                                                </li>
                                                                <% } %>
                                                                    <% for (; i <=(Number(current) + 4) && i <=pages;
                                                                        i++) { %>
                                                                        <% if (i==current) { %>
                                                                            <li class="page-item active"><a
                                                                                    class="page-link">
                                                                                    <%= i %>
                                                                                </a></li>
                                                                            <% } else { %>
                                                                                <li class="page-item"><a
                                                                                        class="page-link"
                                                                                        href="/admin/users/<%= i %>">
                                                                                        <%= i %>
                                                                                    </a> </li>
                                                                                <% } %>
                                                                                    <% if (i==Number(current) + 4 && i <
                                                                                        pages) { %>
                                                                                        <li class="page-item disabled">
                                                                                            <a class="page-link">....
                                                                                        </li>
                                                                                        <% } %>
                                                                                            <% } %>
                                                                                                <% if (current==pages) {
                                                                                                    %>
                                                                                                    <li
                                                                                                        class="page-item disabled">
                                                                                                        <a
                                                                                                            class="page-link">Last</a>
                                                                                                    </li>
                                                                                                    <% } else { %>
                                                                                                        <li
                                                                                                            class="page-item">
                                                                                                            <a href="/admin/users/<%= pages %>"
                                                                                                                class="page-link">Last</a>
                                                                                                        </li>
                                                                                                        <% } %>
                                        </ul>
                                    </nav>
                                    <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </section>



            <% include ../../partials/footer %>